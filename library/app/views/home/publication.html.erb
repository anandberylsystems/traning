
<html>
	<head>
	<style>
		table, th, td {
			

    border: 1px solid black;
    border-collapse: collapse;

      }

      #home{
      	margin-right: 0px;
      }
      </style>

	</head>
	<body>
		<center><h1>PUBLICATION DETAILS DETAILS</h1></center><hr/><br/>
		<p align="right"> <%= link_to "Insert Publication", "/new_publication" %> </p>
		<center>
		<table>
			<tr>
				<th> <h3>ID</h3></th>
				<th><h3>NAME</h3></th>
				<th><h3>CREATED AT</h3></th>
				<th><h3>UPDATED AT</h3></th>
				
			</tr>
			<% @publication.each do |i| %> 
			<tr>
				<td><%= i.id %></td>
				<td><%= i.name %></td>
				<td><%= i.created_at %></td>
				<td><%= i.updated_at %></td>
				<td> <%= link_to "delete", "/delete_publication?id=#{i.id}", method: "DELETE" %> </td>

				<td> <%= link_to "edit", "/show_edit?id=#{i.id}" %> </td>

			</tr>
			<% end %> 
</table><br/>
</center>
<p align="right"> <%= link_to "home", "/" %> </p>

	</body>
</html>

